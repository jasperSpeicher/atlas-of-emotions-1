{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-env"]
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "indent": [2, "tab", { "SwitchCase": 1 }],
    "semi": [2, "always"],
    "quotes": [2, "single", "avoid-escape"]
  }
}
